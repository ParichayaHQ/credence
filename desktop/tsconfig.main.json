{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build/main",
    "target": "ES2020",
    "module": "CommonJS",
    "noEmit": false,
    "lib": ["ES2020"],
    "types": ["node", "electron"]
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "src/preload/**/*"
  ]
}